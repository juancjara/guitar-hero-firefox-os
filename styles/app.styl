.settings
  ul
    font-size: 1.2em
    li
      margin-top: 10px
  input
    font-family: inherit
    font-size: 100%
    line-height: normal
    margin: 0
  input[type="radio"]
    box-sizing: border-box
    padding: 0
  .container
    height: 64px;
    left: 40%;
    position: absolute;
    width: 160px;
  .switch
    background: #fff;
    border-radius: 32px;
    display: block;
    height: 24px;
    position: relative;
    width: 60px;
    label
      color: #fff;
      font-size: 24px;
      font-weight: 300;
      line-height: 24px;
      text-transform: uppercase;
      -webkit-transition: color .2s ease;
      -moz-transition: color .2s ease;
      -ms-transition: color .2s ease;
      -o-transition: color .2s ease;
      transition: color .2s ease;
      width: 80px;
      &:nth-of-type(1)
        left: -140%;
        position: absolute;
        text-align: right;
      &:nth-of-type(2)
        position: absolute;
        right: -140%;
        text-align: left;
    input
      height: 44px;
      left: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      width: 160px;
      z-index: 2;  
      &:checked
        & ~ label
          &:nth-of-type(1)
            color #fff
          &:nth-of-type(2)
            color #808080
        & ~ .toggle
          left 4px
      & ~ :checked
        & ~ label
          &:nth-of-type(1)
            color #808080
          &:nth-of-type(2)
            color #fff
        & ~ .toggle
          left 34px     

  .toggle
    background: #4a4a4a;
    border-radius: 50%;
    height: 20px;
    left: 0;
    position: absolute;
    top: 2px;
    -webkit-transition: left .2s ease;
    -moz-transition: left .2s ease;
    -ms-transition: left .2s ease;
    -o-transition: left .2s ease;
    transition: left .2s ease;
    width: 20px;
    z-index: 1;

